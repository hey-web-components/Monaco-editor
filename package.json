{
  "name": "@hey-web-components/monaco-editor",
  "version": "0.2.1",
  "type": "module",
  "description": "A web component wrapper for monaco-editor.",
  "repository": {
    "type": "git",
    "url": "https://github.com/hey-web-components/monaco-editor.git"
  },
  "homepage": "https://hey-web-components.github.io/monaco-editor/",
  "main": "dist/node/index.js",
  "exports": {
    ".": "./dist/node/index.js"
  },
  "types": "types/index.d.ts",
  "unpkg": "dist/cdn/index.js",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build -c vite.node.config.ts",
    "build:cdn": "tsc && vite build",
    "build:node": "tsc && vite build -c vite.node.config.ts",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze",
    "analyze:watch": "cem analyze --watch",
    "storybook": "BROWSER=none NODE_OPTIONS=--openssl-legacy-provider storybook dev -p 6006",
    "storybook:build": "npm run analyze && NODE_OPTIONS=--openssl-legacy-provider  storybook build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "lit": "^2.4.1",
    "monaco-editor": "^0.34.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@custom-elements-manifest/analyzer": "^0.6.8",
    "@storybook/addon-actions": "^7.0.20",
    "@storybook/addon-essentials": "^7.0.20",
    "@storybook/addon-links": "^7.0.20",
    "@storybook/addon-mdx-gfm": "^7.0.20",
    "@storybook/web-components": "^7.0.20",
    "@storybook/web-components-vite": "^7.0.20",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.33.0",
    "eslint-plugin-storybook": "^0.6.12",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^2.6.1",
    "prettier": "^2.8.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.20",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "license": "MIT",
  "keywords": [
    "monaco",
    "editor",
    "monaco-editor",
    "angular",
    "react",
    "vue",
    "js",
    "web",
    "component",
    "webcomponent"
  ]
}
